@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Güncelleme Sayfası</h3>
                    </div> <!-- /.card-header -->
                    <div class="card-body">
                        <form method="post">
                            <label>Kategori ID</label>
                            <div class="mt-2"></div>
                            <input type="hidden" class="form-control" asp-for="CategoryId" />
                            <div class="mb-2"></div>
                            <label>Kategori Adı</label>
                            <div class="mt-2"></div>
                            <input type="text" class="form-control" asp-for="CategoryName" />
                            <div class="mb-2"></div>
                            <button class="btn btn-primary">Güncelle</button>
                        </form>
                    </div> <!-- /.card-body -->
                </div> <!-- /.card -->
            </div> <!-- /.col -->
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>

